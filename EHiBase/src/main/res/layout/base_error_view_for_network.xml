<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_network_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_network_error"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ui_error_view_network_icon" />

    <TextView
        android:id="@+id/tv_network_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_network_error"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/resource_network_errer"
        android:textColor="#555555"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tv_network_error_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_network_error"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="请检查您的网络设置"
        android:textColor="#B6B6B6"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_retry"
        android:layout_width="105dp"
        android:layout_height="32dp"
        android:layout_below="@+id/tv_network_error_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@drawable/ui_error_view_network_retry_bg"
        android:gravity="center"
        android:text="重新加载"
        android:textColor="#63ADD9"
        android:textSize="14dp" />

</RelativeLayout>