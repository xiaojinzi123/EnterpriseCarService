<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UiAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/resource_mine_shaft</item>
        <item name="android:textSize">@dimen/resource_dp_15</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background" >@color/resource_white</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/UiActivityAnim</item>
        <item name="android:buttonStyle" >@style/Widget.UiAppTheme.Button</item>
    </style>

    <style name="UiAppTheme.LightStatusBar">
    </style>

    <style name="Widget.UiAppTheme.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/ui_default_button_selector</item>
        <item name="android:textColor">@color/resource_white</item>
        <item name="android:textSize">@dimen/resource_dp_15</item>
    </style>

    <style name="Widget.UiAppTheme.Button.stroke" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/ui_default_button_stroke_selector</item>
        <item name="android:textColor">@color/resource_chilean_fire</item>
        <item name="android:textSize">@dimen/resource_dp_15</item>
    </style>

    <style name="UiActivityAnim" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/ui_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/ui_slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/ui_slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/ui_slide_right_out</item>
    </style>


    <style name="UiConfirmDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Dialog进度条 -->
    <style name="UiLoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/resource_transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="UiLoadingDialogAnim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/ui_loading_dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/ui_loading_dialog_exit_anim</item>
    </style>

</resources>