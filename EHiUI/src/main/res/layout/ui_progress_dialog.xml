<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_progress_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/resource_transparent"
    android:padding="8dp">

    <ImageView
        android:layout_width="@dimen/resource_dp_32"
        android:layout_height="@dimen/resource_dp_32"
        android:layout_centerInParent="true"
        android:src="@drawable/ui_logo_loading" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="@dimen/resource_dp_45"
        android:layout_height="@dimen/resource_dp_45"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/ui_loading_rotate" />

</RelativeLayout>